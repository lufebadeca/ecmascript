let hello = 'hello';
let world = 'world';
let epicPhrase = hello + ' ' + world + '!';

//template literals
let epicPhrase2 = `${hello} ${world}!`;
console.log(epicPhrase2);

// multi-line strings
let lorem = 'this is a string \n' + 'this is another line';
let lorem2 = `this is an epic phrase
    This is the resuming of that epic phrase.`;

console.log(lorem);
console.log(lorem2);